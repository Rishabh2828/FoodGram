<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDescriptionActivity">


   <View
       android:id="@+id/view2"
       android:layout_width="match_parent"
       android:layout_height="240dp"
       android:background="@drawable/item_bg"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/imageView3"
       android:layout_width="250dp"
       android:layout_height="150dp"
       android:layout_marginTop="124dp"
       android:src="@drawable/chicken"
       app:layout_constraintEnd_toEndOf="@+id/view2"
       app:layout_constraintHorizontal_bias="0.496"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <View
       android:id="@+id/view3"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:background="@drawable/white_cardview"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView3" />

   <TextView
       android:id="@+id/productname"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:text="Chicken"
       android:textSize="18dp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="@+id/view3"
       app:layout_constraintHorizontal_bias="0.498"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView3" />

   <LinearLayout
       android:id="@+id/linearLayout2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"


       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/productname">

      <androidx.cardview.widget.CardView
          android:layout_width="130dp"

          android:layout_height="120dp"
          android:layout_margin="15dp"
          android:layout_weight="1"

          app:cardCornerRadius="25dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ordersize_bg"
             android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Calories"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="500"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Per 100 gram"
                android:textSize="12dp"
                android:textStyle="bold" />


         </LinearLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="130dp"

          android:layout_height="120dp"
          android:layout_margin="15dp"
          android:layout_weight="1"
          app:cardCornerRadius="25dp">

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ordersize_bg"
             android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Fat"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="500"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Per 100 gram"
                android:textSize="12dp"
                android:textStyle="bold" />


         </LinearLayout>


      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="130dp"
          android:layout_height="120dp"
          android:layout_margin="15dp"
          android:layout_weight="1"
          app:cardCornerRadius="25dp">

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ordersize_bg"
             android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Protein"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="500"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Per 100 gram"
                android:textSize="12dp"
                android:textStyle="bold" />


         </LinearLayout>


      </androidx.cardview.widget.CardView>


   </LinearLayout>


   <LinearLayout

       android:id="@+id/linearLayout3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"

       android:orientation="vertical"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


      <TextView
          android:id="@+id/firsttext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:fontFamily="sans-serif-black"
          android:text="This is the most delecious item of our store"
          android:textSize="16dp" />

      <TextView
          android:id="@+id/secondtext"
          android:layout_width="wrap_content"
          android:layout_marginRight="10dp"

          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"

          android:fontFamily="sans-serif-black"
          android:text="It is specially for all Foodie"
          android:textSize="16dp" />


   </LinearLayout>


   <LinearLayout
       android:id="@+id/linearLayout5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="25dp"
       android:orientation="horizontal"
       app:layout_constraintStart_toStartOf="@+id/view3"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="Total price = â‚¹
"
          android:textColor="@color/black" />

      <TextView
          android:id="@+id/productdesc_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:text=""

          android:textColor="@color/black" />


   </LinearLayout>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@+id/linearLayout5">


      <androidx.cardview.widget.CardView
          android:layout_width="20dp"

          android:layout_height="20dp"
          android:layout_margin="15dp"
          android:layout_weight="1"
          app:cardCornerRadius="25dp">


         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ordersize_bg"
             android:orientation="vertical">


         <ImageView
             android:id="@+id/productdesc_decrease_quantity"

             android:layout_width="20dp"
             android:layout_height="wrap_content"
             android:src="@drawable/baseline_horizontal_rule_24" />
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/productdesc_quantity"

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="1" />


      <androidx.cardview.widget.CardView
          android:layout_width="20dp"

          android:layout_height="20dp"
          android:layout_margin="15dp"
          android:layout_weight="1"
          app:cardCornerRadius="25dp">


         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ordersize_bg"
             android:orientation="vertical">


         <ImageView
             android:id="@+id/productdesc_increase_quantity"
             android:layout_width="20dp"
             android:layout_height="wrap_content"
             android:src="@drawable/baseline_add_24" />
         </LinearLayout>
      </androidx.cardview.widget.CardView>
   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:orientation="horizontal"
       app:layout_constraintBottom_toBottomOf="@+id/view3"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
       tools:layout_editor_absoluteX="10dp">




      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/productdesc_addtocartbtn"
          android:layout_width="150dp"
          android:layout_height="50dp"
          android:layout_margin="5dp"
          android:background="@drawable/cardview_bg"
          android:layout_weight="1"
          android:text="Add to cart" />
   </LinearLayout>














</androidx.constraintlayout.widget.ConstraintLayout>